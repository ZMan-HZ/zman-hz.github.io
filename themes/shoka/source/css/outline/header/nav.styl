.container>header nav {
  position: fixed;
  z-index: $zindex-2;
  width: 100%;
  height: 50px;
  the-transition();

  &.up {
    transform: translateY(0);
  }

  &.down {
    transform: translateY(-100%);
  }

  &.show {
    background: linear-gradient(-225deg, var(--color-cyan-light) 0%, var(--color-pink-light) 100%);
    box-shadow: .1em .1em .2em var(--grey-9-a1);
    text-shadow: 0px 0px 1px var(--grey-9-a1);

    a,
    span.exturl,
    div {
      color: var(--text-color);
    }

    .line {
      background: var(--text-color);
      box-shadow: 0px 0px 1px var(--grey-9-a1);
    }

    .menu .item.active a {
      color: var(--color-aqua);
      opacity: 1;
    }
  }

  a,
  span.exturl,
  div {
    color: #FFF;
  }

  .inner {
    height: 100%;
    display: flex;
    width: $content-desktop;
    flex-wrap: nowrap;

    +desktop-large() {
      width: $content-desktop-large;
    }

    +desktop-largest() {
      width: $content-desktop-largest;
    }

    +tablet-mobile() {
      //width: auto;
    }
  }
}

.toggle.menu {
  display: none;

  +tablet-mobile() {
    flex-column();
  }

  .lines {
    padding: 20px;
    width: 22px;
    box-sizing: unset;
  }
}

@import 'menu';
@import 'right';
