// Menu
// --------------------------------------------------
header .list.menu {
  padding: 10px 0;
  margin: 0;
  width: 100%;

  .item {
    display: inline-block;

    margin: 0 10px;

    +mobile() {
      display: none;

      &.menu-item-search {
        display: none;
      }
    }

    a, span.exturl {
      display: block;
      font-size: $font-size-medium;
    }

    i {
      margin-right: 8px;
    }

    .badge {
      display: inline-block;
      font-weight: bold;
      line-height: 1;
      margin-left: .35em;
      margin-top: .35em;
      text-align: center;
      white-space: nowrap;

      +mobile() {
        float: right;
        margin-left: 0;
      }
    }

    a:hover, &.active a {
      opacity: .8;
    }

    &.active a:hover {
      opacity: 1;
    }
  }
}

.menu div {
  cursor: pointer;
}
