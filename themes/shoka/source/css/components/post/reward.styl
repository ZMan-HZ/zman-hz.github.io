.reward {
  margin: 20px auto;
  padding: 10px 0;
  text-align: center;

  button {
    background: var(--primary-color);
    border: 0;
    border-radius: 5px;
    color: white;
    cursor: pointer;
    line-height: 2;
    outline: 0;
    padding: 0 15px;
    vertical-align: text-top;

    &:hover {
      background: var(--primary-color);
    }

    i {
      margin-right: 5px;
    }
  }

  p {
    font-size: $font-size-smaller;
    color: var(--grey-5);
    margin: 0;
  }
}

#qr {
  padding-top: 20px;
  display: none;

  a {
    border: 0;
  }

  img {
    display: inline-block;
    max-width: 100%;
  }

  p {
    text-align: center;
  }

}
