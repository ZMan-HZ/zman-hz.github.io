pre.mermaid, pre.graphviz {
  background: none;
  padding: 0;
}

pre > svg {
  display: block;
  margin: 0 auto;
}

pre.graphviz {
  white-space: normal;
  max-width: calc(100% - 50px);
  svg > g > polygon {
    fill: var(--grey-1);
  }
}

.mermaid {
  &.graph svg{
    max-height: 300px;
  }

  @import 'flowchart';
  @import 'sequence';
  @import 'gantt';
  @import 'class';
  @import 'git';
  @import 'pie';
  @import 'state';
}

:root {
  --mermaid-font-family: "trebuchet ms", verdana, arial;
}

