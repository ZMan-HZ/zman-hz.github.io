// Page specific styles

@import 'home';
@import 'collapse';
@import 'tag-cloud';

.page {
  .notfound {
    width: 300px;
    height: 330px;
    background: url("../images/404.png") no-repeat center bottom;
    text-align: center;
    margin:100px auto;
  }

  .anchor::before {
    font-family-icons();
    color: var(--grey-4);
    position: absolute;
    left: -25px;
    margin-top: .25em;
    visibility: visible;
    the-transition(, ease-out);

    +mobile-small() {
      left: -3px;
    }
  }

  .body h1 .anchor::before {
    @extend .i-sakura:before;
    @extend .rotate;
    font-size: $font-size-small;
    margin-top: .15em;
    color: pink;
    left: -30px;

    +mobile-small() {
      left: -5px;
    }
  }

  .body h2 .anchor::before {
    @extend .i-heartbeat:before;
    @extend .beat;
    font-size: $font-size-smaller;
    color: var(--color-pink);
  }

  .body h3 .anchor::before {
    @extend .i-star:before;
    @extend .flash;
    font-size: $font-size-smallest;
    color: var(--color-orange);
  }

}
